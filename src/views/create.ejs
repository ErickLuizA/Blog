<!DOCTYPE html>
<html>
  <%- include("./partials/head.ejs") %>
  <body>
    <%- include("./partials/nav.ejs") %>
    <main>
      <form action="/blogs" method="post" class="d-flex justify-content-center mt-5">
        <fieldset class="d-flex flex-column align-items-center">
          <legend>Create a new blog</legend>
          <label for="title">Blog title:</label>
          <input type="text" id="title" name="title" class="form-control" required>
          <label for="snippet">Blog snippet:</label>
          <input type="text" id="snippet" name="snippet" class="form-control" required>
          <label for="body">Blog body:</label>
          <textarea id="body" name="body" class="form-control" required></textarea>
          <button class="btn btn-primary mt-4 w-100">Submit</button>
        </fieldset>
      </form>
    </main>
  </body>
</html>