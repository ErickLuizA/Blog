<!DOCTYPE html>
<html>
  <%- include("./partials/head.ejs") %>
  <body>
    <%- include("./partials/nav.ejs") %>
    <main class="container">
      <h2>All Blogs</h2>

      <% if (blogs.length > 0) { %>
        <% blogs.forEach(blog => { %>
          <a class="link" href="/blogs/<%= blog.id %>">
            <h3 class="title"> <%= blog.title %> </h3>
            <p class="snippet"> <%= blog.snippet %> </p>
          </a>
        <% }) %>  
      <% } else { %>
        <p>There are no blogs at the moment :(</p>
        <a href=""> Add one </a>
      <% } %>  
    </main>
  </body>
</html>